      "email": "rachevsk@us.ibm.com"
    },
    {
      "name": "Rachel N. White",
      "email": "whiter@us.ibm.com"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {},
  "scripts": {
    "start": "node app.js",
    "build": "browserify -o public/js/main.js src/index.js",
    "watch": "watchify -v -d -o public/js/main.js src/index.js"
  },
  "devDependencies": {
    "browserify": "^10.2.4",
    "browserify-shim": "^3.8.9",
    "watchify": "^3.2.3"
